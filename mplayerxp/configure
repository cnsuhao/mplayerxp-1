    _def_ossaudio_devdsp='#define PATH_DEV_DSP "/dev/dsp"'
    _def_ossaudio_devmixer='#define PATH_DEV_MIXER "/dev/mixer"'
fi  

enabled alsa && require2 alsa alsa/asoundlib.h SND_LIB_MAJOR -lasound
