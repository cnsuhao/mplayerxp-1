# OPTFLAGS = -O3 $profile $debug $gcov $march $mcpu -pipe -fomit-frame-pointer -ffast-math
OPTFLAGS = $CFLAGS
OPTXXFLAGS = $CXXFLAGS
DEBUG = -DDEBUG
#-- Compile-time random numbers
RND_NUMBER0 = $rnd0
