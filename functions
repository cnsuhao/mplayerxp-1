    defines=$1
    headers=$2
    func=$3
    shift 3
    disable $func
    defs=""
    for dfn in $defines; do
        defs="$defs
#define $dfn 1"
    done
    incs=""
    for hdr in $headers; do
        incs="$incs
#include <$hdr>"
    done
    check_ld "$@" <<EOF && enable $func
$defs
$incs
long x;
int main(void){
    x=(long)$func;
    return 0;
}
EOF
    enabled $func && answer="yes" || answer="no"
    echores $answer
    enabled $func && return 0 || return 1
}

