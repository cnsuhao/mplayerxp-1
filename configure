#!/bin/sh
# The simplest configure for mplayerxp
for parm in "$@" ; do
  if test "$parm" = "--help" || test "$parm" = "-help" || test "$parm" = "-h" ; then
cd mplayerxp
./configure --help
cd ..
exit 0
  fi
done # for parm in ...

for i in etc DOCS mplayerxp ; do
    echo Entering \'"$i"\' directory
    cd $i
    ./configure "$@"
    cd ..
    echo Leaving \'"$i"\' directory
done
